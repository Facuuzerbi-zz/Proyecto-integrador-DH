<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <script src="https://kit.fontawesome.com/3eaccf5d38.js" crossorigin="anonymous"></script>
        <link rel="shortcut icon" href="/img/Logos/Icono-negro.png">
        <link rel="stylesheet" href="/css/Header.css">   
        <link rel="stylesheet" href="/css/Home.css">
        <title>Home</title>
    </head>
<body>
    <%- include("./partials/header") %>
<!-- De aca para abajo -->
<div class="home-box">
        <section>
            <div class="slideshow-container">
                <!-- Carrousel -->
                <div class="mySlides fade">
                  <img src='/img/auto/auto.jpg' >
                    <div class="centrado">Auto</div>
                    <div class="centrado-bajo">Auto Eléctrico V.1</div>
                    <a href="http://localhost:3030/product/auto"><input class="button-product" type="button" value="Ver más"></a>
                </div>
              
                <div class="mySlides fade">
                  <img src='/img/monopatin/monofondo.jpg' >
                  <div class="centrado">Monopatín</div>
                    <div class="centrado-bajo">Monopatín Eléctrico V.1</div>
                    <a href="#"><input class="button-product" type="button" value="Ver más"></a>
                </div>
              
                <div class="mySlides fade">
                  <img src='/img/moto/motofondo.jpg' >
                  <div class="centrado">Moto</div>
                    <div class="centrado-bajo">Moto Eléctrica V.1</div>
                    <a href="#"><input class="button-product" type="button" value="Ver más"></a>
                </div>
              
                <!-- Next and previous buttons -->
                <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                <a class="next" onclick="plusSlides(1)">&#10095;</a>
              </div>
              <!-- The dots/circles -->
              <div style="text-align:center">
                <span class="dot" onclick="currentSlide(1)"></span>
                <span class="dot" onclick="currentSlide(2)"></span>
                <span class="dot" onclick="currentSlide(3)"></span>
              </div>
             
         </section>
          <!-- Gallery -->
         <div class="row"> 
            <div class="column">
               <img src="/img/auto/auto.jpg"> 
            </div>
            <div class="column">
               <img src="/img/moto/motofondo.jpg">
            </div>
               <div class="column">
               <img src="/img/monopatin/monofondo.jpg">
            </div>
          </div>   
          <!-- news -->   
          <section class="section-suscribe">
            <div>
                <p>Suscribite para recibir todas nuestras novedades</p>
            </div>
            <div>
                 <form action="/" method="POST">
                     <input class="form-suscribe" type="email" name="user" placeholder="Ingrese su email" required>
                     <input class="button-suscribe" type="submit" value="Suscribirse">
                 </form>
            </div>
        </section>
        </div>
        <%- include("./partials/footer") %>
    <script>
        var slideIndex = 1;
        showSlides(slideIndex);
        
        function plusSlides(n) {
          showSlides(slideIndex += n);
        }
        
        function currentSlide(n) {
          showSlides(slideIndex = n);
        }
        
        function showSlides(n) {
          var i;
          var slides = document.getElementsByClassName("mySlides");
          var dots = document.getElementsByClassName("dot");
          if (n > slides.length) {slideIndex = 1}    
          if (n < 1) {slideIndex = slides.length}
          for (i = 0; i < slides.length; i++) {
              slides[i].style.display = "none";  
          }
          for (i = 0; i < dots.length; i++) {
              dots[i].className = dots[i].className.replace(" active", "");
          }
          slides[slideIndex-1].style.display = "block";  
          dots[slideIndex-1].className += " active";
        }
        </script>
</body>
</html>